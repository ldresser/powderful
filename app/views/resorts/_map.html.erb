


<div id="map_canvas">
	<script type="text/javascript">

    // Initialise the map and plot the user's current location
    initialize(<%= session[:uLat] %>,<%= session[:uLng] %>,'You are here')

    //Loop through the resorts table and plot each on the map
    <% @resorts.each do |resort| %>
    <% if resort.resortStatus == "1" %>
	    var rLat = <%= resort.latitude %>
	    var rLng = <%= resort.longitude %>
	    var rTitle = '<%= resort.name %>'
        var stars_rank = '<%= ("★" * (resort.stars / 8).floor) +  ("☆" * (5 - ((resort.stars / 8).floor))) %>'
	    addMarkers(rLat,rLng,rTitle,stars_rank)
    <% end %>
<% end %>

var lat_min = <%= @lat_min %>
var lng_min = <%= @lng_min %>
var lat_max = <%= @lat_max %>
var lng_max = <%= @lng_max %>

zoomToFit(lat_max,lng_max,lat_min,lng_min);

  </script>

</div>	


